// prisma/schema.prisma
datasource db {
  provider = "mysql" 
  url      = env("DATABASE_URL")  // Pastikan menambahkan DATABASE_URL di .env
}

generator client {
  provider = "prisma-client-js"
}

model Registration {
  id               Int      @id @default(autoincrement())
  orderId          String
  fullName         String
  email            String
  phone            String
  address          String
  price            String
  transactionStatus String  // Status transaksi
}
